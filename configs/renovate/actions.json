{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Versioning rules for all custom Github Actions defined in this repository",
  "packageRules": [
    {
      "description": "Versioning Strategy: Parsing tags for internal actions",
      "matchPackageNames": ["TimSchoenle/actions"],
      "matchCurrentVersion": "/^actions-/",
      "versioning": "regex:^(?<compatibility>actions-.*)[-/]v?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?$"
    },
    {
      "description": "Commit Message Templates: Custom naming for internal actions updates (excluding pins)",
      "matchPackageNames": ["TimSchoenle/actions"],
      "matchCurrentVersion": "/^actions-/",
      "matchUpdateTypes": ["major", "minor", "patch"],
      "commitMessageTopic": "{{compatibility}}",
      "commitMessageExtra": "to v{{newVersion}}",
      "additionalBranchPrefix": "{{compatibility}}-"
    }
  ]
}
