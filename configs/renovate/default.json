{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Default configuration for Renovate",
  "extends": [
    "config:best-practices",
    "helpers:pinGitHubActionDigests",
    "workarounds:all",
    "github>TimSchoenle/actions//configs/renovate/base",
    "github>TimSchoenle/actions//configs/renovate/ci-automerge"
  ],
  "dependencyDashboardApproval": false,
  "dependencyDashboard": true,
  "semanticCommits": "enabled",
  "semanticCommitType": "deps",
  "labels": ["dependencies"],
  "rebaseWhen": "behind-base-branch",
  "timezone": "Europe/Berlin",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "branchConcurrentLimit": 0,
  "gitIgnoredAuthors": ["actions-maintenance-bot", "actions-maintenance-bot[bot]@users.noreply.github.com"],
  "packageRules": [
    {
      "description": "Auto-merge all non-major updates",
      "matchUpdateTypes": ["minor", "patch", "digest", "pin", "lockFileMaintenance"],
      "automerge": true
    }
  ]
}
