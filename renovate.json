{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "helpers:pinGitHubActionDigests",
    "workarounds:all",
    "github>TimSchoenle/actions//configs/renovate/base",
    "github>TimSchoenle/actions//configs/renovate/ci-automerge"
  ],
  "dependencyDashboard": true,
  "semanticCommits": "enabled",
  "semanticCommitType": "deps",
  "labels": ["dependencies"],
  "rebaseWhen": "auto",
  "timezone": "Europe/Berlin",
  "minimumReleaseAge": null,
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "branchConcurrentLimit": 0,
  "github-actions": {
    "managerFilePatterns": [
      "//(^|/)(workflow-templates|\\.(?:github|gitea|forgejo)/(?:workflows|actions))/.+\\.ya?ml$//",
      "//(^|/)action\\.ya?ml$//",
      "/^workflows/.+/workflow\\.ya?ml$/"
    ]
  },
  "packageRules": [
    {
      "description": "Auto-merge safe dev updates",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["major", "minor", "patch", "digest"],
      "automerge": true
    },
    {
      "description": "Auto-merge @types/* (non-major)",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "matchPackageNames": ["/^@types//"]
    },
    {
      "description": "Review majors for TypeScript",
      "groupName": "typescript major",
      "matchPackageNames": ["typescript"],
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ]
}
